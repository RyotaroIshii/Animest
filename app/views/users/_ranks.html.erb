<td class="align-middle">
<% if user.avatar == '1-1' %>
  <% if user.acquisition_point <= 500 %>
    <%= image_tag '1-1', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 1200 %>
    <%= image_tag '1-2', :class => "rank-img" %>
  <% else %>
    <%= image_tag '1-3', :class => "rank-img" %>
  <% end %>
<% elsif user.avatar == '2-1' %>
  <% if user.acquisition_point <= 200 %>
    <%= image_tag '2-1', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 450 %>
    <%= image_tag '2-2', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 800 %>
    <%= image_tag '2-3', :class => "rank-img" %>
  <% else %>
    <%= image_tag '2-4', :class => "rank-img" %>
  <% end %>
<% elsif user.avatar == '3-1' %>
  <% if user.acquisition_point <= 50 %>
    <%= image_tag '3-1', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 150 %>
    <%= image_tag '3-2', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 270 %>
    <%= image_tag '3-3', :class => "rank-img" %>
  <% elsif user.acquisition_point <= 420 %>
    <%= image_tag '3-4', :class => "rank-img" %>
  <% else %>
    <%= image_tag '3-5', :class => "rank-img" %>
  <% end %>
<% else %>
  <p class="text-muted m-0">アバター未選択</p>
</td>
<% end %>

<% if user.name == "" %>
<td class="align-middle text-muted">匿名</td>
<% else %>
<td class="align-middle"><%= link_to user.name, user_path(user.uid), :class => "text-dark font-weight-bold" %></td>
<% end %>

<td class="align-middle"><%= user.acquisition_point %></td>

<td class="align-middle">
<% title_number = user.title || 0 %>
<%= image_tag "title#{title_number}", :class => title_number.zero? ? "rank-no_title" : "rank-title" %>
</td>