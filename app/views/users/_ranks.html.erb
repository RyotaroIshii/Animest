<td class="align-middle">
<% if user.avatar == '1-1' %>
  <% if user.acquisition_point <= 500 %>
    <%= image_tag '1-1', width: '35%', height: '35%' %>
  <% elsif user.acquisition_point >= 510 && user.acquisition_point <= 1200 %>
    <%= image_tag '1-2', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 1210 %>
    <%= image_tag '1-3', width: '35%', height: '35%'  %>
  <% end %>
<% elsif user.avatar == '2-1' %>
  <% if user.acquisition_point <= 200 %>
    <%= image_tag '2-1', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 210 && user.acquisition_point <= 450 %>
    <%= image_tag '2-2', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 460 && user.acquisition_point <= 800 %>
    <%= image_tag '2-3', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 810 %>
    <%= image_tag '2-4', width: '35%', height: '35%'  %>
  <% end %>
<% elsif user.avatar == '3-1' %>
  <% if user.acquisition_point <= 50 %>
    <%= image_tag '3-1', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 60 && user.acquisition_point <= 150 %>
    <%= image_tag '3-2', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 160 && user.acquisition_point <= 270 %>
    <%= image_tag '3-3', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 280 && user.acquisition_point <= 420 %>
    <%= image_tag '3-4', width: '35%', height: '35%'  %>
  <% elsif user.acquisition_point >= 430 %>
    <%= image_tag '3-5', width: '35%', height: '35%'  %>
  <% end %>
<% else %>
  <p class="text-muted m-0">アバター未選択</p>
</td>
<% end %>

<% if user.name == "" %>
<td class="align-middle text-muted">匿名</td>
<% else %>
<td class="align-middle"><%= link_to user.name, user_path(user.uid), :class => "text-dark font-weight-bold" %></td>
<% end %>

<td class="align-middle"><%= user.acquisition_point %></td>

<td class="align-middle">
<% if user.title == 1 %>
  <%= image_tag 'title1', width: '75%', height: '75%' %>
<% elsif user.title == 2 %>
  <%= image_tag 'title2', width: '75%', height: '75%' %>
<% elsif user.title == 3 %>
  <%= image_tag 'title3', width: '75%', height: '75%' %>
<% elsif user.title == 4 %>
  <%= image_tag 'title4', width: '75%', height: '75%' %>
<% elsif user.title == 5 %>
  <%= image_tag 'title5', width: '75%', height: '75%' %>
<% elsif user.title == 6 %>
  <%= image_tag 'title6', width: '75%', height: '75%' %>
<% elsif user.title == 7 %>
  <%= image_tag 'title7', width: '75%', height: '75%' %>
<% elsif user.title == 8 %>
  <%= image_tag 'title8', width: '70%', height: '65%' %>
<% elsif user.title == 9 %>
  <%= image_tag 'title9', width: '75%', height: '75%' %>
<% else %>
  <%= image_tag 'title0', width: '45%', height: '45%' %>
<% end %>
</td>
