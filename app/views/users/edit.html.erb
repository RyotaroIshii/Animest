<div class="container-fluid">
  <div class="row pt-3">
    <div class="offset-1"></div>
    <div class="col-10">
      <h1 class="font-weight-bold"><%= image_tag current_user.image, :class => "rounded-circle" %>プロフィール編集</h1>
    </div>
    <div class="offset-1"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
        <div class="form-group">
          <label for="user_image">Image</label>
          <!--< f.file_field :profile_image, accept: "image/*" , class: "form-control-file user_image"%>-->
        </div>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, class: "form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introdcution</label><br>
          <%= f.text_area :description, class: "form-control description" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>