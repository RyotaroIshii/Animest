<div class="container-fluid">
  <div class="row py-3">
    <div class="offset-1"></div>
    <div class="col-10">
      <h1 class="font-weight-bold"><%= image_tag current_user.image, :class => "rounded-circle" %>プロフィール編集</h1>
    </div>
    <div class="offset-1"></div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: @user, url: update_user_path, method: :patch do |f| %>
      <div class="form-group">
        <label for="user_title"><h4 class="py-2"><strong>称号</strong></h4></label>
        <div class="form-row">
        <% if @user.acquisition_point >= 10 %>
          <div class="col-4"><%= f.radio_button :title, '1' %><%= image_tag 'title1', width: '90%', height: '90%' %></div>
          <% if @user.acquisition_point >= 50 %>
            <div class="col-4"><%= f.radio_button :title, '2' %><%= image_tag 'title2', width: '90%', height: '90%' %></div>
            <% if @user.acquisition_point >= 100 %>
              <div class="col-4"><%= f.radio_button :title, '3' %><%= image_tag 'title3', width: '90%', height: '90%' %></div>
              <% if @user.acquisition_point >= 200 %>
                <div class="col-4"><%= f.radio_button :title, '4' %><%= image_tag 'title4', width: '90%', height: '90%' %></div>
                <% if @user.acquisition_point >= 400 %>
                  <div class="col-4"><%= f.radio_button :title, '5' %><%= image_tag 'title5', width: '90%', height: '90%' %></div>
                  <% if @user.acquisition_point >= 700 %>
                    <div class="col-4"><%= f.radio_button :title, '6' %><%= image_tag 'title6', width: '90%', height: '90%' %></div>
                    <% if @user.acquisition_point >= 1200 %>
                      <div class="col-4"><%= f.radio_button :title, '7' %><%= image_tag 'title7', width: '90%', height: '90%' %></div>
                      <% if @user.acquisition_point >= 1700 %>
                        <div class="col-4"><%= f.radio_button :title, '8' %><%= image_tag 'title8', width: '90%', height: '90%' %></div>
                        <% if @user.acquisition_point >= 2500 %>
                          <div class="col-4"><%= f.radio_button :title, '9' %><%= image_tag 'title9', width: '90%', height: '90%' %></div>
                        <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="form-group">
        <label for="user_name"><h4 class="py-2"><strong>名前</strong></h4></label>
        <%= f.text_field :name, autofocus: true, :class => "form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_description"><h4 class="py-2"><strong>自己紹介</strong><small>(255文字以下)</small></h4></label>
        <%= f.text_area :description, :class => "form-control description", rows: 6 %>
      </div>
      <div class="d-flex justify-content-between pb-3">
        <span class="mr-5 pr-5"><%= link_to image_tag('back', width: '100%', height: '100%' ), user_path(current_user.uid) %></span>
        <span class="ml-5 pl-5"><%= image_submit_tag('update', width: '100%', height: '100%') %></span>
      </div>
    <% end %>
    </div>
  </div>
</div>