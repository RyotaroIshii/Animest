<div class="container">
  <div class="row pt-3">
    <div class="offset-1"></div>
    <div class="col-10">
      <h1 class="font-weight-bold"><i class="fa-solid fa-ranking-star"></i>ランキング</h1>
    </div>
    <div class="offset-1"></div>
  </div>
  <div class="row py-3">
    <div class="offset-1"></div>
    <div class="col-10" style="height:1300px; width:100%;">
      <table class="table table-borderless border-bottom border-dark text-center">
        <thead class="font-weight-bold" style="font-size:18px;">
          <tr>
            <th style="width: 10%">順位</th>
            <th style="width: 20%"></th>
            <th style="width: 15%">名前</th>
            <th style="width: 20%">獲得ポイント</th>
            <th style="width: 25%">称号</th>
          </tr>
        </thead>
        <% point = 0 %>
        <% j = 1 %>
        <% @users.each.with_index(1) do |user,i|%>
          <% if i == 1 %>
            <% point = user.acquisition_point %>
          <% end %>
          <% if user.acquisition_point != point %>
            <% j = i %>
            <% point = user.acquisition_point %>
          <% else %>
            <% point = user.acquisition_point %>
          <% end %>
          <% if j == 1 %>
        <tbody class="border-bottom border-top border-dark">
          <tr>
            <th class="align-middle top1"><%= j %>位</th>
            <%= render 'ranks', user: user %>
          </tr>
        </tbody>
          <% elsif j == 2 %>
        <tbody class="border-bottom border-top border-dark">
          <tr>
            <th class="align-middle top2"><%= j %>位</th>
            <%= render 'ranks', user: user %>
          </tr>
        </tbody>
          <% elsif j == 3 %>
        <tbody class="border-bottom border-top border-dark">
          <tr>
            <th class="align-middle top3"><%= j %>位</th>
            <%= render 'ranks', user: user %>
          </tr>
        </tbody>
          <% else %>
            
        <tbody class="border-bottom border-top border-dark">
          <tr>
            <th class="align-middle"><%= j %>位</th>
            <%= render 'ranks', user: user %>
          </tr>
        </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
    <div class="offset-1"></div>
  </div>
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
    </div>
  </div>
  <%= paginate @users %>
</div>
