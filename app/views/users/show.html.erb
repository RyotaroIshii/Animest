<%= @user.name %>

<% if @user.avatar == '1-1' %>

  <% if @user.acquisition_point <= 500 %>
    <%= image_tag '1-1' %>
  <% elsif @user.acquisition_point >= 501 && @user.acquisition_point <= 1200 %>
    <%= image_tag '1-2' %>
  <% elsif @user.acquisition_point >= 1201 %>
    <%= image_tag '1-3' %>
  <% end %>

<% elsif @user.avatar == '2-1' %>

  <% if @user.acquisition_point <= 200 %>
    <%= image_tag '2-1' %>
  <% elsif @user.acquisition_point >= 201 && @user.acquisition_point <= 450 %>
    <%= image_tag '2-2' %>
  <% elsif @user.acquisition_point >= 451 && @user.acquisition_point <= 800 %>
    <%= image_tag '2-3' %>
  <% elsif @user.acquisition_point >= 801 %>
    <%= image_tag '2-4' %>
  <% end %>

<% elsif @user.avatar == '3-1' %>

  <% if @user.acquisition_point <= 50 %>
    <%= image_tag '3-1' %>
  <% elsif @user.acquisition_point >= 51 && @user.acquisition_point <= 150 %>
    <%= image_tag '3-2' %>
  <% elsif @user.acquisition_point >= 151 && @user.acquisition_point <= 270 %>
    <%= image_tag '3-3' %>
  <% elsif @user.acquisition_point >= 271 && @user.acquisition_point <= 420 %>
    <%= image_tag '3-4' %>
  <% elsif @user.acquisition_point >= 421 %>
    <%= image_tag '3-5' %>
  <% end %>

<% end %>
